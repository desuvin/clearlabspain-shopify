  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}
{{ 'custom-list-menu.css' | asset_url | stylesheet_tag }}
{% if customer %}
  <nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    
    {% assign groupname = customer.metafields.custom.customer_group_name.value %}

    {% if groupname %}
      <!-- {{ groupname }} -->
      <!-- {{ request.path }} -->

      {% assign pagepath = request.path %}
      {% assign page_parts = pagepath | split: '/' %}
      

      {%- for link in customer.metafields.custom.customer_group.value -%}
        <li>
          {% if link.collection != blank %}
            <a
            id="HeaderMenu-{{ link.handle }}"
            href="/collections/{{ link.collection }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.collection == page_parts[2] %}
              aria-current="page"
            {% endif %}
            >
              <span
                {%- if link.collection == page_parts[2] %}
                  class="header__active-menu-item"
                {% endif %}
              >
                {% assign navigation_name = link.navigationName | escape %}
                
                
                {% if shop.locale == "es" %}
                  {% assign nav_collection = collections[link.collection] %}
                  {% if nav_collection %}
                    {% assign navigation_name = nav_collection.metafields.custom.display_name.value  %}
                  {% endif %}
                {% endif %}

                {% comment %} {{- link.navigationName | escape -}} {% endcomment %}
                {{- navigation_name -}}
              </span>
            </a>
          {% endif %}
        </li>
      {% endfor %}
    {% endif %}
    
